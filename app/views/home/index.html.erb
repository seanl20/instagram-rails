<div class="row">
  <div class="col">
    <div class="py-4 px-5">
      <div class="mb-5">
        <%= link_to root_path do %>
          <%= image_tag "instagram-logo.png", width: 103 %>
        <% end %>
      </div>
      <div class="mb-4">
        <%= link_to "", data: { "bs-toggle": "modal", "bs-target": "#exampleModal"}, class: "sidebar-link" do %>
          <div class="d-flex align-items-center">
            <%= image_tag "icons/create.png", width: 24 %>
            <span class="ms-3">Create</span>
          </div>
        <% end %>
      </div>
      <div>
        <%= link_to "Log out", destroy_user_session_path, data: { "turbo-method": "delete" } %>
      </div>
    </div>
  </div>
  <div class="col-7">
  </div>
  <div class="col-3">
  </div>
</div>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="exampleModalLabel">Modal title</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        ...
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>