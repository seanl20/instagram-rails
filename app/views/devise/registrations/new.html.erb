<div class="d-flex justify-content-center align-items-center vh-100">
  <div>
    <div class="card p-4 mb-3" style="width: 28rem;">
      <div class="card-body">
        <div class="instagram-logo-link"></div>
        <p class="text center text-secondary fs-6 fw-semibold">Sign up to see photos and videos from your friends.</p>
        <div class="d-flex justify-content-center">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "w-100"}) do |f| %>
            <div class="mb-3">
              <%= f.text_field :username, placeholder: "Username", autofocus: true, class: "form-control" %>
            </div>

            <div class="mb-3">
              <%= f.email_field :email, placeholder: "Email", autofocus: true, class: "form-control" %>
            </div>

            <div class="mb-3">
              <%= f.password_field :password, placeholder: "password", autocomplete: "new-password", class: "form-control" %>
            </div>

            <div class="mb-3">
              <%= f.submit "Sign up", class: "btn btn-primary insta-primary w-100" %>
            </div>
          <% end %>
        </div>

        <hr>
        
        <div class="d-flex justify-content-center">
          <%= link_to "Forgot your password?", new_password_path(resource_name), class: "dark-link" %>
        </div>
      </div>
    </div>
    <div class="card py-2" style="width: 28rem;">
      <div class="card-body">
        <p class="mb-0 fs-6 text-center">Don't have an account? <%= link_to "Log In", root_path, class: "standard-link" %></p>
      </div>
    </div>
  </div>
</div>